{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"paths": {
			"@app/*": ["./app/*"],
			"@components/*": ["./components/*"],
			"@helpers/*": ["./helpers/*"],
			"@hooks/*": ["./hooks/*"],
			"@state/*": ["./state/*"],
			"@t/*": ["./types/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es5",
		"types": ["node", "jest"]
	},
	"exclude": ["node_modules"],
	"include": ["next-env.d.ts", "./jest-setup.mjs", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
